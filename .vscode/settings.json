{
    "restructuredtext.updateOnTextChanged": "false",
    "esbonio.sphinx.buildDir": "${workspaceRoot}/_build",
    "esbonio.sphinx.confDir": "${workspaceFolder}/docs",

    // Use unittest as the sole test provider
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./test",
        "-t",
        ".",
        "-p",
        "test_*.py"
    ],
    "python.testing.cwd": "${workspaceFolder}",
    // Note: If pytest.ini exists, VS Code may show a separate 'uhdl' error node.
    // We removed pytest.ini to keep the view clean while using unittest only.

    // Keep analysis paths as before
    "python.analysis.include": [
        "${workspaceRoot}/..",
        "/workspaces"
    ],
    "python.analysis.extraPaths": [
        "${workspaceRoot}/..",
        "/workspaces"
    ],
    "python.analysis.autoImportCompletions": true,
    "python.autoComplete.extraPaths": [
        "${workspaceRoot}/..",
        "/workspaces"
    ]
}